<div>
  <h1 class="font-bold text-4xl">Edit Your Profile</h1>
  <%= form_with model: @profile, url: profile_path, method: :patch do |f| %>
    <div>
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %>
    </div>

    <div>
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name %>
    </div>

    <div>
      <%= f.label :bio %><br>
      <%= f.text_area :bio %>
    </div>

    <h3>Skills</h3>
    <div>
      <%= f.collection_check_boxes :skill_ids, Skill.all, :id, :name do |s| %>
        <div class="skill-item">
          <%= s.check_box %>
          <%= s.label %>
        </div>
      <% end %>
    </div>

    <%= f.submit "Save Changes" %>
  <% end %>
</div>
