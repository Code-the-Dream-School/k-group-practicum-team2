<div class="bg-gray-300 p-6 rounded-xl mb-6 pl-10">
  <%= render partial: "profile", locals: { profile: @profile } %>
</div>

<h2 class="text-2xl font-bold text-black mb-6">Projects</h2>

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">

  <% if @user_projects&.any? %>
    <% @user_projects.each do |project| %>

      <div class="border rounded-xl p-4 shadow hover:shadow-md transition">
        <h3 class="text-xl font-semibold mb-2">
          <%= project.title %>
        </h3>
        <p class="text-gray-600 mb-2">
          <%= project.description %>
        </p>
      </div>

    <% end %>

  <% else %>
    <p>No projects yet.</p>
  <% end %>

</div>
<div class="bg-gray-300 p-6 rounded-xl mb-6 mt-6">


  <h2 class="text-2xl font-bold text-black mb-6">Collaborate With Me</h2>

  <p class="text-gray-700 mb-6">
    I am looking for...
  </p>

<%# this section is yet to be implemented, placeholder for now %>
  <% if current_user.profile&.id == @profile.id %>
    <div class="mt-4">
      <%= link_to "Edit Collaboration Preferences",
                  "#",
                  class: "inline-block bg-black text-white px-4 py-2 rounded-lg hover:opacity-80 transition" %>
    </div>
  <% end %>

</div>
