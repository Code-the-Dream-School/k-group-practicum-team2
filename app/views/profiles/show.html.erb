<div class="min-h-screen bg-gray-100 py-10">
  <div class="max-w-3xl mx-auto bg-white shadow-lg rounded-2xl p-8 relative">

    <% if current_user.profile&.id == @profile.id %>
      <%= link_to "Edit Profile",
                  edit_user_profile_path(current_user, @profile.id),
                  class: "absolute top-6 right-6 bg-black text-white px-4 py-2 rounded-lg hover:opacity-80 transition" %>
    <% end %>


    <div class="flex justify-center mb-6">
      <% if @profile.avatar.attached? %>
        <%= image_tag @profile.avatar,
                      class: "w-32 h-32 rounded-full object-cover border" %>
      <% else %>
        <div class="w-32 h-32 rounded-full bg-gray-200 flex items-center justify-center text-gray-500">
          No Image
        </div>
      <% end %>
    </div>


    <h1 class="text-3xl font-bold text-center mb-2">
      <%= @profile.first_name %>
    </h1>


    <p class="text-gray-600 text-center mb-6">
      <%= @profile.bio.presence || "No bio provided." %>
    </p>


    <div>
      <h2 class="text-xl font-semibold mb-3">Skills</h2>

      <% if @profile.skills.any? %>
        <ul class="flex flex-wrap gap-2">
          <% @profile.skills.each do |skill| %>
            <li class="bg-gray-100 px-3 py-1 rounded-full text-sm">
              <%= skill.name %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-gray-500">No skills added.</p>
      <% end %>
    </div>

    <div class="border-t mt-8 pt-6 space-y-6">


      <div>
        <h3 class="text-xl font-semibold mb-2">Projects</h3>
        <p class="text-gray-500 italic">
            projects ...
        </p>
      </div>


      <div>
        <h3 class="text-xl font-semibold mb-2">Looking For</h3>
        <p class="text-gray-500 italic">
          Open to collaboration, mentorship, and learning opportunities.
        </p>
      </div>

    </div>

  </div>
</div>
