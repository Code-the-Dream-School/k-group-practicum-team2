<div class="flex items-center justify-center gap-8">
  <%# Profile image or default avatar %>
  <div class="w-12 h-12 flex items-center justify-center bg-gray-200 rounded-full overflow-hidden">
    <% if profile&.avatar&.attached? %>
      <%= image_tag(profile.avatar, class: "w-12 h-12 object-cover") %>
    <% else %>
      <svg class="w-8 h-8 text-gray-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A7.972 7.972 0 0112 15c1.657 0 3.157.504 4.379 1.36M12 3a4 4 0 110 8 4 4 0 010-8z" />
      </svg>
    <% end %>
  </div>

  <%# User name and skill level %>
  <div class="text-center">
    <h2 class="text-lg font-semibold">
      <%= [profile&.first_name, profile&.last_name].compact.join(" ") || "Guest" %>
    </h2>
    <p class="text-sm text-gray-600"><span>â˜†</span> Skill level</p>
  </div>

  <%# Skills list %>
  <div>
    <% if profile&.skills&.present? %>
      <ul class="flex gap-2">
        <% profile&.skills.each do |skill| %>
          <li class="border border-gray-900 rounded px-2 py-1 text-sm text-center">
            <%= skill.name %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500 text-sm">No skills added yet</p>
    <% end %>
  </div>
</div>

<%# Bio below the profile line %>
<div class="mt-4 text-center text-gray-700">
  <%= profile&.bio.presence || "..." %>
</div>

<% if current_user.profile&.id == profile.id %>
  <div class="mt-6">
    <%= link_to "Edit Profile",
                edit_user_profile_path(current_user, profile),
                class: "inline-block bg-black text-white px-4 py-2 rounded-lg hover:opacity-80 transition" %>
  </div>
<% end %>
