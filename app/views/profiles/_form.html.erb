<div class="min-h-screen bg-gray-100 flex items-center justify-center py-10">
  <div class="w-full max-w-xl bg-white rounded-2xl shadow-lg p-8">

    <h2 class="text-2xl font-semibold mb-6 text-center">Edit Profile</h2>

    <%= form_with model: @profile, class: "space-y-5" do |f| %>

      <div>
        <%= f.label :avatar, class: "block font-medium mb-1" %>
        <%= f.file_field :avatar, class: "w-full" %>
      </div>

      <div>
        <%= f.label :first_name, class: "block font-medium mb-1" %>
        <%= f.text_field :first_name, class: "w-full border rounded-lg px-3 py-2" %>
      </div>

      <div>
        <%= f.label :last_name, class: "block font-medium mb-1" %>
        <%= f.text_field :last_name, class: "w-full border rounded-lg px-3 py-2" %>
      </div>

      <div>
        <%= f.label :bio, class: "block font-medium mb-1" %>
        <%= f.text_area :bio, rows: 4, class: "w-full border rounded-lg px-3 py-2" %>
      </div>

      <div>
        <%= f.label :skill_ids, "Skills", class: "block font-medium mb-1" %>
        <%= f.collection_select(
              :skill_ids,
              @skills,
              :id,
              :name,
              { prompt: "Select skills" },
              { multiple: true, class: "w-full border rounded-lg px-3 py-2" }
            ) %>
      </div>

      <div class="pt-4 text-center">
        <%= f.submit "Save Profile",
                     class: "bg-black text-white px-6 py-2 rounded-lg hover:opacity-80 transition" %>
      </div>

    <% end %>
  </div>
</div>


