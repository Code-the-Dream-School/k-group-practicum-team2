
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
  <% @profiles.each do |profile| %>
    <div class="border rounded-lg p-4 flex flex-col items-center text-center shadow-sm">
      <% if profile.avatar.attached? %>
        <%= image_tag profile.avatar, class: "w-32 h-32 object-cover rounded-full mb-4" %>
      <% else %>
        <div class="w-32 h-32 bg-gray-200 flex items-center justify-center rounded-full mb-4">
          no image
        </div>
      <% end %>

      <h2 class="text-lg font-semibold">
        <%= profile.first_name %> <%= profile.last_name %>
      </h2>

      <% if profile.bio.present? %>
        <p class="text-gray-600 mt-2"><%= profile.bio %></p>
      <% end %>

      <%= link_to "View Profile", user_profile_path(current_user, profile.id), class: "mt-3 text-blue-500 hover:underline" %>
    </div>
  <% end %>
</div>
