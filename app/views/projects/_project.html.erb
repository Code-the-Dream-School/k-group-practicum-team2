<div class="border rounded-lg p-4 flex flex-col items-center text-center shadow-sm">
  <h2 class="text-lg font-semibold">
    <%= project.title %>
  </h2>

  <% if project.project_skills.any? %>
    <ul>
      <%= render 'projects/project_skills', project: project %>
    </ul>
  <% end %>

  <p class="text-gray-600 mt-2">
    <%= project.description %>
  </p>

  <% if project&.url.present? %>
    <%= link_to "Project Repo ", project.url, target: :_blank, rel: :noopener %>
  <% end %>

  <%= render 'projects/project_status', project: project %>

  <%= link_to "View Project", project_path(project), class: "mt-3 text-blue-500 hover:underline" %>

  <% bookmark = bookmarked_project_ids[project.id] %>

  <% if bookmark %>
    <%= button_to project_bookmarked_project_path(project, bookmark),
                  method: :delete,
                  class: "inline-block hover:scale-110 transition cursor-pointer" do %>
      <img src="<%= asset_path('star-filled.svg') %>"
           alt="bookmarked"
           width="20"
           height="20">
    <% end %>
  <% else %>
    <%= button_to project_bookmarked_projects_path(project),
                  method: :post,
                  class: "inline-block hover:scale-110 transition cursor-pointer" do %>
      <img src="<%= asset_path('star-empty.svg') %>"
           alt="not bookmarked"
           width="20"
           height="20">
    <% end %>
  <% end %>


</div>

