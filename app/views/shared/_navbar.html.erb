<nav class="flex items-center justify-between px-6 sm:px-8 md:px-12 py-2 h-16 bg-gray-200 font-semibold">
  <!-- Left side: logo and main links -->
  <div class="flex items-center gap-8">
    <!-- Logo -->
    <%= link_to root_path, class: "flex items-center mr-12" do %>
      <span class="logo-signature text-2xl sm:text-3xl tracking-tight text-gray-900">
        Developer
      </span>
    <% end %>

    <!-- Main navigation links -->
    <div class="flex items-center gap-8 text-gray-800">
      <% if user_signed_in? %>
        <%= link_to "Dashboard", user_dashboard_path, class: "text-gray-800 hover:underline transition" %>
        <%= link_to "Resources", resources_path, class: "text-gray-800 hover:underline transition" %>
        <%= link_to "Projects", projects_path, class: "text-gray-800 hover:underline transition" %>
      <% end %>
    </div>
