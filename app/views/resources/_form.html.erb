<div class="min-h-screen bg-gray-100 flex items-center justify-center py-10">
  <div class="w-full max-w-xl bg-white rounded-2xl shadow-lg p-6 sm:p-8">
    <%= form_with model: @resource, class: "space-y-5" do |form| %>
      <% if @resource.errors.any? %>
        <h2><%= pluralize(@resource.errors.count, "error") %>: Resource not saved:</h2>
        <ul>
          <% @resource.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      <% end %>

      <div>
        <%= form.label :title,"Title *", class: "block font-medium mb-1" %>
        <%= form.text_field :title, placeholder: "Enter Resource Title",class: "w-full border rounded-lg px-3 py-2"%>
      </div>

      <div>
        <%= form.label :description, class: "block font-medium mb-1" %>
        <%= form.text_area :description, placeholder: "Describe your resource...",rows: 8, class: "w-full border rounded-lg px-3 py-2" %>
      </div>

      <div>
        <%= form.label :url, "External Link *", class: "block font-medium mb-1" %>
        <%= form.url_field :url, placeholder: "https://github.com/" ,class: "w-full border rounded-lg px-3 py-2" %>
      </div>

      <div class="pt-6 flex flex-col sm:flex-row gap-4 justify-center">
        <%= link_to "Cancel",
                    resources_path,
                    class: "flex-1 py-3 border border-gray-300 rounded-lg text-black bg-white hover:bg-gray-100 transition text-lg font-medium text-center"
        %>
        <%= form.submit @resource.new_record? ? "Create Resource" : "Update Resource", class: "flex-1 py-3 rounded-lg bg-purple-600 text-white font-semibold hover:bg-purple-700 transition text-lg text-center" %>
      </div>
    <% end %>
  </div>
</div>
