<div class="min-h-screen bg-gray-100 py-10">
  <div class="max-w-3xl mx-auto bg-white shadow-lg rounded-2xl p-8 relative">
    <h1 class="text-3xl font-bold text-center text-gray-500"><%= @resource.title %></h1>
    <p class="text-gray-600 text-center mb-2"><%= @resource.description %></p>
    <p class="text-gray-600 mt-2">
      Link to resource:
      <%= link_to @resource.url, @resource.url, target: "_blank", rel: 'noopener' %>
    </p>
    <% if @resource.user == current_user %>
      <%= link_to "Edit Resource", edit_resource_path(@resource), class: "absolute top-6 right-6 bg-black text-white px-4 py-2 rounded-lg hover:opacity-80 transition"%>
    <% end %>
  </div>
</div>