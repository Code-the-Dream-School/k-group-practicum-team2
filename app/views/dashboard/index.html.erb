<%# Part 1 - profile section with links %>
<section class="bg-gray-300 py-6 px-4">
  <div class="max-w-3xl mx-auto flex flex-col items-center gap-4">
    <%# profile partial %>
    <%= render partial: "profiles/profile", locals: { profile: current_user.profile } %>
  </div>
</section>

<%# Part 2 - resources and projects %>
<div class="min-h-screen bg-gray-100 py-10 px-4">
  <div class="w-full max-w-5xl mx-auto bg-white rounded-2xl shadow-lg p-6 sm:p-8 space-y-8">
    <section class="flex flex-col items-center gap-8 py-8">
      <%# my projects %>
      <div class="w-full max-w-3xl">
        <h2 class="text-left font-semibold text-lg sm:text-xl mb-4">My Projects</h2>
        <%# my projects cards %>
        <div class="space-y-4">
          <% if @projects.any? %>
            <% @projects.each do |project| %>
              <div class="p-4">
                <%= render partial: "projects/project", locals: { project: project, bookmarked_project_ids: @project_bookmark_ids } %>
              </div>
            <% end %>
          <% else %>
            <p class="text-gray-500 italic">No projects yet.</p>
          <% end %>
        </div>
      </div>

      <%# bookmarked projects %>
      <div class="w-full max-w-3xl">
        <h2 class="text-left font-semibold text-lg sm:text-xl mb-4">Bookmarked Projects</h2>
        <div class="space-y-4">
          <% if @bookmarked_projects.any? %>
            <% @bookmarked_projects.each do |project| %>
              <div class="p-4">
                <%= render partial: "projects/project", locals: { project: project, bookmarked_project_ids: @project_bookmark_ids } %>
              </div>
            <% end %>
          <% else %>
            <p class="text-gray-500 italic">No bookmarked projects.</p>
          <% end %>
        </div>
      </div>

      <%# my shared resources %>
      <div class="w-full max-w-3xl">
        <h2 class="text-left font-semibold text-lg sm:text-xl mb-4">My Resources</h2>
        <%# my resources cards %>
        <div class="space-y-4">
          <% if @resources.any? %>
            <% @resources.each do |resource| %>
              <div class="p-4">
                <%= render partial: "resources/resource", locals: { resource: resource, bookmarked_resource_ids: @resource_bookmark_ids } %>
              </div>
            <% end %>
          <% else %>
            <p class="text-gray-500 italic">No resources yet.</p>
          <% end %>
        </div>
      </div>

      <%# bookmarked resources %>
      <div class="w-full max-w-3xl">
        <h2 class="text-left font-semibold text-lg sm:text-xl mb-4">Bookmarked Resources</h2>
        <div class="space-y-4">
          <% if @bookmarked_resources.any? %>
            <% @bookmarked_resources.each do |resource| %>
              <div class="p-4">
                <%= render partial: "resources/resource", locals: { resource: resource, bookmarked_resource_ids: @resource_bookmark_ids } %>
              </div>
            <% end %>
          <% else %>
            <p class="text-gray-500 italic">No bookmarked resources.</p>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>
