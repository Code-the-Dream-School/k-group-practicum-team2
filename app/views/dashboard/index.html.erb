<div>
  <%# Part 1 - profile section %>
  <section class="bg-gray-300 py-6">
    <%= render partial: "profiles/profile", locals: { profile: current_user.profile } %>
  </section>

  <%# Part 2 - resources and projects %>
  <section class="flex flex-col items-center gap-8 py-8">
    <%# my projects %>
    <div class="w-full max-w-3xl">
      <h2 class="text-left font-semibold text-lg sm:text-xl">My Projects</h2>
      <%# my projects cards %>
      <% if @projects.any? %>
        <% @projects.each do |project| %>
          <%= render partial: "projects/project", locals: { project: project } %>
        <% end %>
      <% else %>
        <p>No projects yet.
      <% end %>
    </div>

    <%# bookmarked projects %>
    <div class="w-full max-w-3xl">
      <h2 class="text-left font-semibold text-lg sm:text-xl">Bookmarked Projects</h2>
      <% if @bookmarked_projects.any? %>
        <% @bookmarked_projects.each do |project| %>
          <%= render partial: "projects/project", locals: { project: project, bookmarked_project_ids: @bookmarked_project_ids } %>
        <% end %>
      <% else %>
        <p>No bookmarked projects.</p>
      <% end %>
    </div>

    <%# my shared resources %>
    <div class="w-full max-w-3xl">
      <h2 class="text-left font-semibold text-lg sm:text-xl">My Resources</h2>
      <%# my resources cards %>
      <% if @resources.any? %>
        <% @resources.each do |resource| %>
          <%= render partial: "resources/resource", locals: { resource: resource } %>
        <% end %>
      <% else %>
        <p>No resources yet.
      <% end %>
    </div>

    <%# bookmarked resources %>
    <div class="w-full max-w-3xl">
      <h2 class="text-left font-semibold text-lg sm:text-xl">Bookmarked Resources</h2>
      <% if @bookmarked_resources.any? %>
        <% @bookmarked_resources.each do |resource| %>
          <%= render partial: "resources/resource", locals: { resource: resource, bookmarked_resource_ids: @bookmarked_resource_ids } %>
        <% end %>
      <% else %>
        <p>No bookmarked resources.</p>
      <% end %>
    </div>
  </section>
</div>
